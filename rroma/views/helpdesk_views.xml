<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_view_form" model="ir.ui.view">
        <field name='name'>helpdesk.ticket.form.inherit.rroma</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <button name="action_generate_fsm_task" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('use_fsm', '=', False), ('fsm_task_count', '!=', 0)]}</attribute>
            </button>
            <field name='user_id' position="attributes">
                <attribute name="attrs">{'required': [('equipment_id', '!=', False)]}</attribute>
            </field>
            <field name='sale_order_id' position="after">
                <field name="equipment_id"
                    context="{'default_customer_id': partner_id,
                              'default_technician_user_id': user_id,
                              'helpdesk': True,
                    }"/>
            </field>
        </field>
    </record>
</odoo>
