<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="maintenance_equipment_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.view.form.inherit.rroma</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="hr_maintenance.maintenance_equipment_view_form_inherit_hr"/>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="customer_id" attrs="
                    {'invisible': [('equipment_assign_to', '!=', 'customer')],
                    'required': [('equipment_assign_to', '=', 'customer')] }"/>
            </field>
            <field name="employee_id" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('equipment_assign_to', '=', 'department'), ('equipment_assign_to', '=', 'customer'), ('equipment_assign_to', '=', False)]}</attribute>
            </field>
            <field name="department_id" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', ('equipment_assign_to', '=', 'employee'), ('equipment_assign_to', '=', 'customer'), ('equipment_assign_to', '=', False)]}</attribute>
            </field>
            <field name="technician_user_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="warranty_date" position="after">
                <field name="product_id" attrs="{'invisible': [('equipment_assign_to', '!=', 'customer')]}"/>
            </field>
        </field>
    </record>

</odoo>
