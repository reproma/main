<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">repair.form.inherit.pulso</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>/>
            </xpath>
            <xpath expr="//field[@name='operations']/form/group" position="before">
                <div class="text-center alert alert-info">
                    <p>The available stock in: <field name="warehouse_id"/> that can be delivered immediately is:
                        <field name="warehouses_stock"
                            widget="warehouse"
                            groups="stock.group_stock_multi_warehouses"
                            options="{'placement': 'bottom'}"/>
                        &amp;nbsp;&amp;nbsp;
                        <field name="warehouses_stock_recompute"
                            nolabel="1"
                            colspan="1"
                            widget="toggle_button"
                            groups="stock.group_stock_multi_warehouses"/>
                    </p>
                </div>
            </xpath>
            <xpath expr="//field[@name='operations']/form//field[@name='location_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True, 'no_open': True}</attribute>/>
            </xpath>
            <xpath expr="//field[@name='operations']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
        </field>
    </record>

</odoo>
