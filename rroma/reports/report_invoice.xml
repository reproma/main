<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_rroma" inherit_id="account.report_invoice_document" priority="99">
        <xpath expr="//t[contains(@t-if, 'line.tax_line_id')]/td/span[@t-esc='amount_by_group[0]']" position="replace">
            <span>Tax</span>
        </xpath>
        <xpath expr="//span[@t-esc='amount_by_group[0]']" position="replace">
            <span>Tax</span>
        </xpath>

        <!-- Centering Table Header -->
        <xpath expr="//th[@name='th_description']" position="attributes">
          <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='th_source']" position="attributes">
          <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="attributes">
          <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='th_subtotal']" position="attributes">
          <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='th_priceunit']" position="attributes">
          <attribute name="t-attf-class">text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}</attribute>
        </xpath>
        <xpath expr="//th[@name='th_price_unit']" position="attributes">
          <attribute name="t-attf-class">text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']" position="inside">
            <div class="col-auto mw-100 mb-2" t-if="o.l10n_cr_edi_sale_condition" name="sale_condition">
                <strong>Sale condition:</strong>
                <p class="m-0" t-field="o.l10n_cr_edi_sale_condition"/>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.invoice_payment_term_id" name="payment_term">
                <strong>Payment term:</strong>
                <p class="m-0" t-field="o.invoice_payment_term_id.name"/>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.l10n_cr_edi_payment_method" name="payment_method">
                <strong>Payment Method:</strong>
                <p class="m-0" t-field="o.l10n_cr_edi_payment_method"/>
            </div>
        </xpath>
    </template>
</odoo>
