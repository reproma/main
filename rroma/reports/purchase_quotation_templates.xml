<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchasequotation_document_rroma" inherit_id="purchase.report_purchasequotation_document" priority="99">
        <xpath expr="//div[hasclass('page')]/h2" position="after">
            <div class="row mt32 mb32">
                <div t-if="o.shipping_instructions" class="col-3 bm-2">
                    <strong>Shipping Instructions: </strong>
                    <span t-field="o.shipping_instructions"/>
                </div>
                <div t-if="o.door_to_door" class="col-3 bm-2">
                    <strong>Door to Door: </strong>
                    <span t-field="o.door_to_door"/>
                </div>
                <div t-if="o.door_to_door" class="col-3 bm-2">
                    <strong>Door to Port: </strong>
                    <span t-field="o.door_to_port"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@t-field='o.partner_id']" position="before">
            <strong>To:</strong><br/>
        </xpath>
        <xpath expr="//t[@t-if='o.dest_address_id']" position="attributes">
            <attribute name="t-if">o.dest_address_id and not o.alternate_shipping_address_id</attribute>
            <attribute name="name">dest_address_id</attribute>
        </xpath>
        <xpath expr="//t[@name='dest_address_id']" position="after">
            <t t-set="information_block" t-elif="o.alternate_shipping_address_id">
                <strong>Shipping address:</strong>
                <div>
                    <div t-field="o.alternate_shipping_address_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                </div>
            </t>
        </xpath>
        <xpath expr="//h2" position="replace">
            <h2>Request for Quotation <span t-field="o.partner_ref"/></h2>
        </xpath>
        <xpath expr="//table" position="replace">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th name="th_description"><strong>Description</strong></th>
                        <th name="th_quantity" class="text-right"><strong>Qty</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                                <td id="product">
                                    <span t-field="order_line.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
